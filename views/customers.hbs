<!-- customer.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h2>Customers</h2>
{{!-- Create a table --}}
<div id="browse">
    <table id="customerTable" border="1" cellpadding="5">
        <caption>Current Customers Listing</caption>
        {{!-- Body section --}}
        <tbody>
            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr class="customerCol">
                <th class="customerH">Customer ID</th>
                <th class="customerH">First Name</th>
                <th class="customerH">Last Name</th>
                <th class="customerH">Email</th>
                <th class="customerH">Phone Number</th>
                <th class="customerH">Address</th>
                <th>Delete</th>
            </tr>

            {{!-- For each row, print the id and other fields in order --}}
            {{#each customerData}}
            <tr data-value={{this.customerId}}>
                <td>{{this.customerId}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phoneNumber}}</td>
                <td>{{this.address}}</td>
                <td><button onclick="deleteCustomer({{this.customerId}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Insert -->
<div id="insert">
    <form id="add-customer-form">
        <legend><strong>Add Customer</strong></legend>
        <fieldset class="fields">
            <label for="firstName" class="required"> First Name </label>
                <input type="text" name="firstName" required id="input-firstName" maxlength="50" />
            <label for="lastName" class="required"> Last Name </label>
                <input type="text" name="lastName" required id="input-lastName" maxlength="80" />
            <label for="email" class="required"> Email </label>
                <input type="email" name="email" required id="input-email" maxlength="100" />
            <label for="phoneNumber" class="required"> Phone Number </label>
            <!-- Citation for the pattern matching validation attribute.
            Date: 6/6/2023
            Type: one line of code
            Copied for our form validation of phone numbers.
            Source URL: https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/tel
             -->
            <input type="text" name="phoneNumber" required id="input-phoneNumber" maxlength="15" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Format: xxx-xxx-xxxx"/>
            </br>
            <label for="address" class="required" > Address </label> 
                <input type="text" name="address" required id="input-address" maxlength="700">
            
            <caption>* these fields are required</caption>
        </fieldset>
        <input class="btn" type="submit" id="addCustomer" value="Add Customer">
    </form>
</div><!-- insert -->

<!-- <p>&nbsp;</p> -->
<div id="update">
    <form id="update-customer-form">
        <legend><strong>Update Customer</strong></legend>
        <fieldset class="fields">
            {{!-- <label>For Customer ID:<strong> 1</strong><br /></label> --}}
            <br>
            <label for="customerId" class="required"> Customer ID </label>
                <select name="customerId" id="input-customerId-update" required>
                    <option value="0">Select a Customer ID</option>
                    {{#each customerData}}
                    <option value="{{this.customerId}}">{{this.customerId}}</option>
                    {{/each}}
                </select>
            <br>
            <label for="firstName" class="required"> First Name </label> 
                <input type="text" name="firstName" required id="input-firstName-update" value="" maxlength="50">
            <label for="lastName" class="required"> Last Name </label> 
                <input type="text" name="lastName" required  value="" maxlength="80" id="input-lastName-update">
            <label for="email" class="required" > Email </label> 
                <input type="text" name="email" required 
                    value="" maxlength="100" id="input-email-update">
            <br>
            <label for="phoneNumber" class="required" > Phone Number </label> 
            <!-- Citation for the pattern matching validation attribute.
            Date: 6/6/2023
            Type: One line of code
            Copied for our form validation of phone numbers.
            Source URL: https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/tel
             -->
            <input type="text" name="phoneNumber" required id="input-phoneNumber" maxlength="15" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Format: xxx-xxx-xxxx"/>
            <label for="address" class="required" > Address </label> 
                <input type="text" name="address" required value="" id="input-address-update" maxlength="700">

            <caption>* these fields are required</caption>
        </fieldset>
        <input class="btn" type="submit" id="updateCustomer" value="Update Customer">
    </form>
</div><!-- update -->

